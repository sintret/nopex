<div class="cover-container" style="margin-top: 200px;">
    <div class="row">
        <div class="col-md-12">
            <input type="text" class="form-control" id="uid" value="<%- uid %>" style="display: none">

            <form class="form-inline">
                <div class="form-group">
                    <button id="photo" class="btn btn-info">Take Photo</button>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail2">Set in Minutes</label>
                    <input type="text" class="form-control" id="minutes" value="10" placeholder="10">
                </div>
                <button id="video" class="btn btn-danger">Record Video</button>
            </form>

        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <canvas id="canvas" height=500 width=500></canvas>
        </div>
    </div>
</div>


